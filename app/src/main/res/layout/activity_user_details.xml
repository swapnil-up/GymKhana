<!-- activity_user_details.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/PastelBlue">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/userPhotoImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/outline_for_photo_view"
            android:contentDescription="@string/user_photo"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/uploadPhotoButton"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttoncolor"
            android:text="upload photo" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:text="First Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/rectangle_user_details"
            android:hint="enter First Name"
            android:inputType="text" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:text="Last Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/rectangle_user_details"
            android:hint="enter Last Name"

            android:inputType="text" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:text="Age"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/rectangle_user_details"
            android:hint="enter age"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/phoneTextView2"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:text="Phone Number"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/phoneEditText2"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/rectangle_user_details"
            android:hint="enter phone number"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/buttoncolor"
            android:text="@string/save" />

    </LinearLayout>

</ScrollView>
