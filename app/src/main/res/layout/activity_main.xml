<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="420dp"
    android:layout_height="match_parent"
    android:background="@color/PastelBlue"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/attendance"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/calendar"
        android:backgroundTint="@null"
        android:contentDescription="click for details"
        app:layout_constraintStart_toStartOf="@+id/Store"
        app:layout_constraintTop_toBottomOf="@+id/Store" />

    <Button
        android:id="@+id/notificationbtn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="84dp"
        android:background="@drawable/notification"
        app:layout_constraintBottom_toBottomOf="@+id/mealPlan"
        app:layout_constraintStart_toEndOf="@+id/mealPlan"
        app:layout_constraintTop_toTopOf="@+id/mealPlan"
        app:tint="@color/secondary" />

    <Button
        android:id="@+id/FoodSearch"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="88dp"
        android:background="@drawable/virtual"
        app:layout_constraintBottom_toBottomOf="@+id/attendance"
        app:layout_constraintStart_toEndOf="@+id/attendance"
        app:layout_constraintTop_toTopOf="@+id/attendance"
        app:layout_constraintVertical_bias="0.0"
        app:tint="@color/secondary" />

    <Button
        android:id="@+id/Store"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/shop"
        android:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@+id/userName"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <Button
        android:id="@+id/payment"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="88dp"
        android:background="@drawable/cashlesspayment"
        app:layout_constraintBottom_toBottomOf="@+id/Store"
        app:layout_constraintStart_toEndOf="@+id/Store"
        app:layout_constraintTop_toTopOf="@+id/Store"
        app:layout_constraintVertical_bias="1.0"
        app:tint="@null" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08095238" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="426dp"
        android:layout_height="172dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background2" />

    <ImageButton
        android:id="@+id/scanButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/logoutbutton"
        app:layout_constraintStart_toEndOf="@+id/logoutbutton"
        app:layout_constraintTop_toTopOf="@+id/logoutbutton"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/barcodescanner" />

    <ImageButton
        android:id="@+id/logoutbutton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/userName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:text="Samrat Ghimire"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/scanButton" />

    <TextView
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="24dp"
        android:text="2012161"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/userName" />

    <Button
        android:id="@+id/mealPlan"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/mealplanner"
        app:layout_constraintEnd_toEndOf="@+id/attendance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/attendance"
        app:layout_constraintTop_toBottomOf="@+id/attendance" />

    <ImageButton
        android:id="@+id/userIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/outline_for_photo_view"
        android:contentDescription="click for details"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/scanButton"
        app:srcCompat="@drawable/samrat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:text="@string/welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/scanButton"
        app:layout_constraintTop_toBottomOf="@+id/logoutbutton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:text="Meal plan Generator"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mealPlan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mealPlan"
        app:layout_constraintTop_toBottomOf="@+id/mealPlan" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/notificationbtn"
        app:layout_constraintStart_toStartOf="@+id/notificationbtn"
        app:layout_constraintTop_toBottomOf="@+id/notificationbtn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Store"
        app:layout_constraintStart_toStartOf="@+id/Store"
        app:layout_constraintTop_toBottomOf="@+id/Store" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/payment"
        app:layout_constraintStart_toStartOf="@+id/payment"
        app:layout_constraintTop_toBottomOf="@+id/payment" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark Attendence"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/attendance"
        app:layout_constraintStart_toStartOf="@+id/attendance"
        app:layout_constraintTop_toBottomOf="@+id/attendance" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Counter"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/FoodSearch"
        app:layout_constraintStart_toStartOf="@+id/FoodSearch"
        app:layout_constraintTop_toBottomOf="@+id/FoodSearch" />


</androidx.constraintlayout.widget.ConstraintLayout>